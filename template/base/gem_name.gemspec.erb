  s.name              = '<%= gem_name %>'
  s.version           = <%= module_name %>::VERSION
  s.platform          = Gem::Platform::RUBY
  s.authors           = ['TODO']
  s.email             = ['TODO']
  s.homepage          = 'TODO'
  s.rubyforge_project = 'TODO'
  s.summary           = <<SUMMARY
TODO
SUMMARY
  s.description       = <<DESCRIPTION
TODO
DESCRIPTION

  #s.add_dependency 'TODO'
  #s.add_development_dependency 'TODO'
  <% glob_dirs = File.directory?('bin') ? '{lib,bin}' : 'lib' %>
